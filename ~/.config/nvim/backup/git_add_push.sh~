#!/bin/zsh



add_commit_push()
{
	#		Add files, Commit, Push
	line="==========================="
	echo $(date) 

	echo " "
	echo "status ..." $line
	git s

	echo " "
	echo "add files ..." $line
	git a

	echo " "
	echo "commit ..." $line
	git cm wip
	
	echo " "
	echo "push ..." $line
	git push
	
	echo " "
	echo "final status ..." $line
	git s
	echo $line
}

add_commit_push
